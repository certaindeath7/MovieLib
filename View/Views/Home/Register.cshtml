
@{
    ViewBag.Title = "Register";
}

    
<head>
    <title>register</title>

    <style>
        .note {
            text-align: center;
            height: 80px;
            background: -webkit-linear-gradient(left, #0072ff, #8811c5);
            color: #fff;
            font-weight: bold;
            line-height: 80px;
        }

        .form-content {
            padding: 5%;
            border: 1px solid #ced4da;
            margin-bottom: 2%;
        }

        .form-control {
            border-radius: 1.5rem;
        }

        .btnSubmit {
            border: none;
            border-radius: 1.5rem;
            padding: 1%;
            width: 20%;
            cursor: pointer;
            background: #0062cc;
            color: #fff;
        }
    </style>

</head>

<h2>Register</h2>

<div class="container register-form">
    <form class="form" action="../UserLogin/Register" method="post">
        
        <div class="form-content">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="RegisterUsername" name="RegisterUsername" />
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="RegisterEmail" name="RegisterEmail" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <input type="password" class="form-control" placeholder="RegisterPassword" name="RegisterPassword" />
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" placeholder="RegisterConfirmPassword" name="RegisterConfirmPassword" />
                    </div>
                </div>
            </div>
            <button class="btnSubmit">Submit</button>
        </div>
    </form>
</div>
