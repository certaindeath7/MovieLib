
@{
    ViewBag.Title = "EditGenre";
}

<h2>Edit Genre Page</h2>
<h3>@ViewBag.GenreMessage</h3>

<div class="container">
    <!-- inserting section-->
    <h3> Add Media</h3>
    <div class="container">
        <div class="row">
            <form action="../EditGenre/CreateGenre" method="post">
                <!-- Admin choose to create / update or delete media -->
                <div class="form-label-group" style="margin-top:10px; display:inline;">
                    <select id="criteria" name="criteria" required>
                        <option value="">Select Creaate / Update / Delete</option>
                        <option value="Create">Create</option>
                        <option value="Update">Update</option>
                        <option value="Delete">Delete</option>
                    </select>
                </div>

                <div class="form-label-group" style="margin-top:10px; display:inline;">
                    <label style="margin-right:25px;">Genre Name</label> <input type="text" name="GenreName" class="form-control" placeholder="Genre Name" style="display:inline; margin-bottom:10px" required>
                </div>

                <div class="form-label-group" style="margin-top:10px;display:inline;">
                    <label style="margin-right:15px;">Genre ID</label> <input name="GenreID" type="number" class="form-control" placeholder="GenreID" style="display:inline; margin-bottom:10px " required>

                </div><br />


                <div><button class="btnSubmit" type="submit" style="margin-top:100px; float:left;">Action</button></div>
            </form>
        </div>
    </div>

    <!-- print out the table-->
    <div class="table">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">GID</th>
                    <th scope="col">GenreName</th>

                </tr>
            </thead>
            <tbody>

                @foreach (var media in ViewBag.allGenre)
                {

                    <tr>
                        <th scope="row">@media.GID</th>
                        <td>@media.GenreName</td>

                    </tr>

                }

            </tbody>
        </table>
    </div>


</div>

