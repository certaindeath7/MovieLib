
@{
    ViewBag.Title = "EditUser";
}

<h2>Edit User Page</h2>
<h3>@ViewBag.UserMessage</h3>

<div class="container">
    <!-- inserting section-->
    <h3> Add User</h3>
    <div class="container">
        <div class="row">
            <form action="../EditUser/CreateUser" method="post">
                <!-- Admin choose to create / update or delete media -->
                <div class="form-label-group" style="margin-top:10px; display:inline;">
                    <select id="criteria" name="criteria" required>
                        <option value="">Select Creaate / Update / Delete</option>
                        <option value="Create">Create</option>
                        <option value="Update">Update</option>
                        <option value="Delete">Delete</option>
                    </select>
                </div>

                <div class="form-label-group" style="margin-top:10px;display:inline;">
                    <label style="margin-right:15px;">User ID</label> <input name="UserID" type="number" class="form-control" placeholder="UserID" style="display:inline; margin-bottom:10px " required>

                </div><br />
                <div class="form-label-group" style="margin-top:10px; display:inline;">
                    <label style="margin-right:25px;">UserName</label> <input type="text" name="UserName" class="form-control" placeholder="User Name" style="display:inline; margin-bottom:10px" required>
                </div>
                <div class="form-label-group" style="margin-top:10px; display:inline;">
                    <label style="margin-right:25px;">Password</label> <input type="text" name="Password" class="form-control" placeholder="Password" style="display:inline; margin-bottom:10px" required>
                </div>
                <div class="form-label-group" style="margin-top:10px;display:inline;">
                    <label style="margin-right:15px;">User Level</label> <input name="UserLevel" type="number" class="form-control" placeholder="UserLevel" style="display:inline; margin-bottom:10px " required>

                </div><br />
                <div class="form-label-group" style="margin-top:10px; display:inline;">
                    <label style="margin-right:25px;">Email</label> <input type="text" name="Email" class="form-control" placeholder="Email" style="display:inline; margin-bottom:10px" required>
                </div>

                <div><button class="btnSubmit" type="submit" style="margin-top:100px; float:left;">Action</button></div>
            </form>
        </div>
    </div>

    <!-- print out the table-->
    <div class="table">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">UID</th>
                    <th scope="col">UserName</th>
                    <th scope="col">Password</th>
                    <th scope="col">UserLevel</th>
                    <th scope="col">Email</th>

                </tr>
            </thead>
            <tbody>

                @foreach (var media in ViewBag.allUser)
                {

                <tr>
                    <th scope="row">@media.UID</th>
                    <td>@media.UserName</td>
                    <td>@media.Password</td>
                    <td>@media.UserLevel</td>
                    <td>@media.Email</td>
                </tr>

                }

            </tbody>
        </table>
    </div>


</div>

